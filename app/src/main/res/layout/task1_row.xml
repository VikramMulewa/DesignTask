<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_marginTop="7dp"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginBottom="7dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardElevation="2dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/topview"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_marginTop="5dp"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/face"
                app:civ_border_color="#FF000000"
                app:civ_border_width="0dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="4dp"
                android:weightSum="2">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="27dp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentTop="true"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_marginTop="2dp"
                    android:text="sample"
                    android:textSize="16sp"
                    android:textColor="#404040"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="5dp"
                    android:weightSum="3">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"

                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/icn_like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"

                            android:src="@drawable/like" />

                        <TextView
                            android:id="@+id/like"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textSize="13sp"
                            android:layout_marginLeft="4dp"
                            android:textColor="#646464"
                            android:layout_toRightOf="@+id/icn_like"
                            android:text="2" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"

                        >

                        <ImageView
                            android:id="@+id/icn_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"

                            android:src="@drawable/location" />

                        <TextView
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:textSize="13sp"
                            android:layout_marginLeft="4dp"
                            android:textColor="#646464"
                            android:layout_toRightOf="@+id/icn_location"
                            android:text="sample" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/icn_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"

                            android:src="@drawable/time" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginLeft="4dp"
                            android:textColor="#646464"
                            android:layout_toRightOf="@+id/icn_time"
                            android:text="2" />
                    </RelativeLayout>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:textColor="#494949"
            android:textSize="16sp"
            android:lineSpacingExtra="5dp"
            android:layout_below="@+id/topview"
            android:layout_alignLeft="@+id/topview"
            android:layout_alignStart="@+id/topview"
            android:layout_alignRight="@+id/topview"
            android:layout_alignEnd="@+id/topview"/>

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/description"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/ss1" />

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/img"
            android:weightSum="3">


            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:textSize="16sp"
                android:text="Like"
                android:textAllCaps="false"
                android:textColor="#848484" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#a7fefefe"
                android:orientation="vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:textSize="16sp"
                android:text="Comment"
                android:textAllCaps="false"
                android:textColor="#848484" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#defefefe"
                android:orientation="vertical" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#fff"
                android:textSize="16sp"
                android:text="Share"
                android:textAllCaps="false"
                android:textColor="#848484" />
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>